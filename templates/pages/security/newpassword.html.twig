{% extends "pages/default/layout.html.twig" %}

{% block content %}
    <!--content -->
    <div class="content">
        <!--section -->
        <section>
            <!-- container -->
            <div class="container">
                <!-- profile-edit-wrap -->
                <div class="profile-edit-wrap">
                    <div class="profile-edit-page-header">
                        <h2>Edit profile</h2>
                    </div>
                </div>
                <div class="row">
                    {% block left %}
                        {% include 'pages/users/nav.html.twig' %}
                    {% endblock %}
                    {% block right %}

                        <div class="col-md-9">
                            <!-- profile-edit-container-->
                            <div class="profile-edit-container">
                                <div class="profile-edit-header fl-wrap" style="margin-top:30px">
                                    <h4>Change Password</h4>
                                </div>
                                {{ form_start(pwdForm, {attr:{novalidate:'novalidate'}}) }}

                                <div class="custom-form no-icons">

                                    {{ form_row(pwdForm.oldPassword, {'label':'Current Password', 'attr':{'class':'pass-input'}}) }}
                                    {{ form_row(pwdForm.password.first, {'label':'New Password', 'attr':{'class':'pass-input'}}) }}
                                    {{ form_row(pwdForm.password.second, {'label':'Confirm New Password', 'attr':{'class':'pass-input'}}) }}



                                    <button type="submit" class="btn  big-btn  color-bg flat-btn">Save Changes<i
                                                class="fa fa-angle-right"></i></button>

                                </div>
                                {{ form_end(pwdForm) }}
                            </div>
                            <!-- profile-edit-container end-->
                        </div>

                    {% endblock %}

                </div>
            </div>
            <!--profile-edit-wrap end -->
            <!--container end -->
        </section>
        <!-- section end -->
        <div class="limit-box fl-wrap"></div>

    </div>
{% endblock %}

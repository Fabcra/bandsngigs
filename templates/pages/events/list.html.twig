
            {% for e in events %}
            <div class="col-md-4">
                <article class="card-post">
                    <div class="card-post-img fl-wrap">
                        <a href="{{ path('event',{'slug':e.slug}) }}"><img src="{{ e.flyer.url }}"   alt=""></a>
                    </div>
                    <div class="card-post-content fl-wrap">
                        <h3><a href="{{ path('event',{'slug':e.slug}) }}">{{ e.name }}</a></h3>
                        <p>{{ e.description }}</p>
                        {% for b in e.bands %}
                        <div class="post-author"><a href="{{ path('band', {'slug':b.slug}) }}"><img src="{{ b.logo.url }}" alt=""><span>{{ b.name }}</span></a></div>
                       {% endfor %}
                        <div class="post-opt">
                            <ul>
                                <li><i class="fa fa-calendar-check-o"></i><span>{{ e.date|date("d/m/Y") }}</span></li>
                                <li><i class="fa fa-eye"></i> <span>264</span></li>
                                {% for s in e.styles %}
                                <li><i class="fa fa-tags"></i> <a href="#">{{ s.style }}</a>  </li>
                                {% endfor %}
                            </ul>
                        </div>
                    </div>
                </article>
            </div>
            {% endfor %}
            <div class="pagination">
                {{ knp_pagination_render(events) }}
            </div>

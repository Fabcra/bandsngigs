{% extends "pages/default/layout.html.twig" %}

{% block content %}

    <!--content -->
    <div class="content">
        <!--section -->
        <section>
            <!-- container -->
            <div class="container">
                <!-- profile-edit-wrap -->
                <div class="profile-edit-wrap">
                    <div class="profile-edit-page-header">
                        <h2>New event</h2>
                    </div>
                </div>
                <div class="row">

                    {% block left %}
                        <div class="col-md-7">
                            <!-- profile-edit-container-->
                            {{ form_start(eventForm) }}
                            <div class="profile-edit-container">
                                <div class="custom-form">
                                    {{ form_row(eventForm.name) }}
                                    <section>
                                        <h3>Date and Time</h3>
                                    {{ form_row(eventForm.date, {'attr':{'class': 'floatleft', 'label':'Date'}}) }}
                                    {{ form_row(eventForm.time, {'attr':{'class': 'floatleft', 'label':'Time'}}) }}
                                    </section>
                                    <div class="check-user floatleft marginbottom20">
                                        {{ form_row(eventForm.bands) }}
                                    </div>


                                    <section class="check-user bigmarginright">
                                        <p>You can add unsubscribed bands in the website on in this event</p>
                                        <ul class="members"
                                            data-prototype="{{ form_row(eventForm.unsubscribedBands.vars.prototype)|e }}">
                                        </ul>
                                    </section>
                                    <div class="check-user floatleft marginbottom20">
                                        {{ form_row(eventForm.venue) }}
                                    </div>

                                    <div class="check-user floatleft marginbottom20">
                                        {{ form_row(eventForm.unsubscribedVenue) }}
                                    </div>

                                    {{ form_row(eventForm.flyer, {'attr':{'class': 'floatleft', 'label':'Flyer'}}) }}


                                    <section class="check-user floatleft formbackground">
                                        <div class="col-md-6">
                                            {{ form_row(eventForm.styles) }}
                                        </div>
                                    </section>

                                    {{ form_row(eventForm.description) }}

                                    <section>
                                        {{ form_row(eventForm.price, {'attr':{'class': 'floatleft', 'label':'Price'}}) }}
                                    </section>

                                    <button class="btn  big-btn  color-bg flat-btn">Save Changes<i
                                                class="fa fa-angle-right"></i></button>
                                </div>
                            </div>

                            <!-- profile-edit-container end-->
                            {{ form_end(eventForm) }}
                        </div>
                    {% endblock %}
                </div>
            </div>
            <!--profile-edit-wrap end -->
            <!--container end -->
        </section>
        <!-- section end -->
        <div class="limit-box fl-wrap"></div>

    </div>


{% endblock %}
{% block javascripts %}

    {{ parent() }}

    <script src="{{ asset('js/addmember.js') }}" type="text/javascript"></script>
    <script src="{{ asset('js/addmemberForm.js') }}" type="text/javascript"></script>
    <script src="{{ asset('js/deletemember.js') }}" type="text/javascript"></script>

{% endblock %}
{% extends 'pages/default/layout.html.twig' %}

{% block content %}
    <!--register form -->
    <div>
        <div class="main-overlay"></div>
        <div class="main-register-holder">
            <div class="main-register fl-wrap">
                <h3>Enregistrement <span>Bands N'<strong> Gigs</strong></span></h3>
                <div class="soc-log fl-wrap">
                    <p>Pour vous enregistrer plus rapidement, utilisez votre compte Google</p>

                    <a href="{{ path('connect_google') }}" class="google-log"><i class="fa fa-google-plus-official"></i>S'enregistrer avec Google</a>
                </div>
                <div class="log-separator fl-wrap"><span>or</span></div>


                <div id="tabs-container">
                    <div class="tab">
                        <div class="tab">
                            <div id="tab-1" class="tab-content">
                                <div class="custom-form">
                                    {{ form_start(form) }}
                                    {{ form_row(form.mail, {'label' : 'E-mail' }) }}
                                    {{ form_row(form.password.first, {'label' : 'Mot de passe' }) }}
                                    {{ form_row(form.password.second, {'label' : 'Retapez le mot de passe' }) }}


                                    <button type="submit" class="log-submit-btn"><span>S'enregistrer</span></button>
                                    {{ form_end(form) }}

                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--register form end -->
{% endblock %}

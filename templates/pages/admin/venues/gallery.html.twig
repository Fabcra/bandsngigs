{% extends "pages/admin/layout.html.twig" %}

{% block right %}
    <div class="col-md-7">
        <!-- profile-edit-container-->
        <div class="profile-edit-container">
            <div class="profile-edit-header fl-wrap">
                <h4>Galerie d'images</h4>
            </div>
            {% if gallery is not empty %}
                <ul style="list-style-type: none">
                    {% for i in gallery %}
                        <li class="col-sm-4 js-gallery-item">
                            <a href="#"
                               class="js-remove-image-gallery"
                               data-url="{{ path('gallery-image-delete',{
                                   type:'venue', id: i.venue.id, img_id: i.id
                               }) }}">
                                <img src="{{ i.url }}" height="50px"/><br>
                                <span class="fa fa-close"> supprimer</span>
                            </a>
                        </li>
                    {% endfor %}
                </ul>
            {% else %}
                <span>Il n'y a pas d'image dans la galerie</span>
            {% endif %}

        </div>

    </div>
{% endblock %}

{% block javascripts %}

    {{ parent() }}


        <script src="{{ asset('js/manage_gallery.js') }}" type="text/javascript"></script>


{% endblock %}
<!-- header-->
<header class="main-header dark-header fs-header sticky">
    <div class="header-inner">
        <div class="logo-holder">
            <a href="{{ path('homepage') }}"><img src="/images/logo.png" alt="band's n gigs"></a>
        </div>
        {%  if app.user == null %}
        <a href="{{ path('registration') }}" class="add-list">S'enregistrer</a>
        <a href="{{ path('login') }}"><div class="show-reg-form"><i class="fa fa-sign-in"></i>Se connecter</div></a>
       {% else %}
           <div class="header-user-menu">
               <div class="header-user-name">
                   <a href="{{ path('user', {'id':app.user.id}) }}">
                       {% if (app.user.avatar) %}
                           <span><img src="{{ app.user.avatar.url }}" alt="{{ app.user.firstName }}"></span>
                           {% else %}
                               <span><img src="/images/avatar/avatar-bg.png"></span>
                       {% endif %}</a>
                   Hello , {% if (app.user.firstName) %}{{ app.user.firstName }}{% endif %}
               </div>
               <ul>
                   <li><a href="{{ path('profile') }}"> Modification profil</a></li>
                   {% if is_granted('ROLE_ADMIN') %}
                       <li><a href="{{ path('admin') }}"> Admin</a></li>
                   {% endif %}
                   <li><a href="{{ path('logout') }}">Log Out</a></li>
               </ul>
           </div>

        {% endif %}
        <!--  navigation -->
       {% include "pages/default/nav.html.twig" %}
        <!-- navigation  end -->
    </div>
</header>
<!--  header end -->

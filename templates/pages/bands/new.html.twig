{% extends "pages/default/layout.html.twig" %}

{% block content %}

    <!--content -->
    <div class="content">
        <!--section -->
        <section>
            <!-- container -->
            <div class="container">
                <!-- profile-edit-wrap -->
                <div class="profile-edit-wrap">
                    <div class="profile-edit-page-header">
                        <h2>New band</h2>
                    </div>
                </div>
                <div class="row">
                        <div class="col-md-7">
                            <!-- profile-edit-container-->
                            {{ form_start(bandForm) }}
                            <div class="profile-edit-container">
                                <div class="profile-edit-header fl-wrap">
                                    <h4>Nom et contacts</h4>
                                </div>
                                <div class="custom-form">

                                    <!-- Nom et contacts-->
                                    {{ form_row(bandForm.name) }}
                                    {{ form_row(bandForm.website) }}
                                    {{ form_row(bandForm.locality, {'attr':{'class':'js-example-basic-single floatleft fontsize14 marginbottom20'}}) }}
                                    {{ form_row(bandForm.mail) }}
                                    {{ form_row(bandForm.phone) }}
                                </div>
                                <div class="profile-edit-header fl-wrap">
                                    <h4>Infos générales</h4>
                                </div>
                                <div class="custom-form margintop20">
                                    <!-- Détails descriptifs -->
                                        {{ form_row(bandForm.styles, {'attr':{'class':'js-example-basic-multiple fullwidth'}}) }}
                                        {{ form_row(bandForm.description) }}
                                        {{ form_row(bandForm.logo) }}
                                    <button class="btn  big-btn  color-bg flat-btn">Save Changes<i
                                                class="fa fa-angle-right"></i></button>
                                </div>
                            </div>
                            <!-- profile-edit-container end-->
                            {{ form_widget(bandForm._token) }}
                            {{ form_end(bandForm, {'render_rest':false}) }}
                        </div>
                </div>
            </div>
            <!--profile-edit-wrap end -->
            <!--container end -->
        </section>
        <!-- section end -->
        <div class="limit-box fl-wrap"></div>

    </div>


{% endblock %}

{% block javascripts %}

    {{ parent() }}

    <script src="{{ asset('js/addmember.js') }}" type="text/javascript"></script>
    <script src="{{ asset('js/addmemberForm.js') }}" type="text/javascript"></script>
    <script src="{{ asset('js/deletemember.js') }}" type="text/javascript"></script>

{% endblock %}
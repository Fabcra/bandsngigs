{% extends "pages/default/layout.html.twig" %}

{% block content %}

    <!--content -->
    <div class="content">
        <!--section -->
        <section>
            <!-- container -->
            <div class="container">
                <!-- profile-edit-wrap -->
                <div class="profile-edit-wrap">
                    <div class="profile-edit-page-header">
                        <h2>New band</h2>
                    </div>
                </div>
                <div class="row">

                    {% block left %}
                        <div class="col-md-7">
                            <!-- profile-edit-container-->
                            {{ form_start(bandForm) }}
                            <div class="profile-edit-container">
                                <div class="custom-form">
                                    {{ form_row(bandForm.name) }}

                                    <div class="check-user floatleft marginbottom20">
                                        {{ form_row(bandForm.members) }}
                                    </div>

                                    <section class="check-user bigmarginright">
                                        <p>You can add unscribed people in the website on your band page</p>
                                        <ul class="members"
                                            data-prototype="{{ form_row(bandForm.unscribedMembers.vars.prototype)|e }}">
                                        </ul>
                                    </section>


                                    {{ form_row(bandForm.logo, {'attr':{'class': 'floatleft', 'label':'Logo'}}) }}
                                    {{ form_row(bandForm.mail) }}
                                    {{ form_row(bandForm.phone) }}
                                    {{ form_row(bandForm.website) }}
                                    {{ form_row(bandForm.locality, {'attr':{'class':'select-locality floatleft fontsize14 marginbottom20'}}) }}


                                    <section class="check-user floatleft formbackground">
                                        <div class="col-md-6">
                                            {{ form_row(bandForm.styles) }}
                                        </div>

                                    </section>

                                    {{ form_row(bandForm.description) }}
                                    <button class="btn  big-btn  color-bg flat-btn">Save Changes<i
                                                class="fa fa-angle-right"></i></button>
                                </div>
                            </div>

                            <!-- profile-edit-container end-->
                            {{ form_widget(bandForm._token) }}
                            {{ form_end(bandForm, {'render_rest':false}) }}
                        </div>
                    {% endblock %}
                </div>
            </div>
            <!--profile-edit-wrap end -->
            <!--container end -->
        </section>
        <!-- section end -->
        <div class="limit-box fl-wrap"></div>

    </div>


{% endblock %}

{% block javascripts %}

    {{ parent() }}

    <script src="{{ asset('js/addmember.js') }}" type="text/javascript"></script>
    <script src="{{ asset('js/addmemberForm.js') }}" type="text/javascript"></script>
    <script src="{{ asset('js/deletemember.js') }}" type="text/javascript"></script>

{% endblock %}
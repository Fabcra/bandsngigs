{% extends "pages/default/layout.html.twig" %}

{% block content %}
<!--content -->
<div class="content">
    <!--section -->
    <section>
        <!-- container -->
        <div class="container">
            <!-- profile-edit-wrap -->
            <div class="profile-edit-wrap">
                <div class="profile-edit-page-header">
                    <h2>New band</h2>
                </div>
            </div>
            <div class="row">
                {% block left %}
                    {% include 'pages/bands/nav.html.twig' %}
                {% endblock %}
                {% block right %}
                <div class="col-md-7">
                    <!-- profile-edit-container-->
                    {{ form_start(bandForm, {attr:{novalidate:'novalidate'}}) }}
                    <div class="profile-edit-container">
                        <div class="profile-edit-header fl-wrap">
                            <h4>My Account</h4>
                        </div>

                        <div class="custom-form">

                            <section class="check-user floatleft formbackground">
                                <div class="col-md-6">
                                    {{ form_row(bandForm.users) }}
                                </div>
                            </section>



                        </div>


                        <!-- profile-edit-container end-->
                        {{ form_end(bandForm) }}
                    </div>
                    {% endblock %}
                </div>
            </div>
            <!--profile-edit-wrap end -->
            <!--container end -->
    </section>
    <!-- section end -->
    <div class="limit-box fl-wrap"></div>

</div>
{% endblock %}
{% extends "pages/users/layout.html.twig" %}

                        {% block right %}
                            <div class="col-md-7">
                                <!-- profile-edit-container-->
                                {{ form_start(userForm, {attr:{novalidate:'novalidate'}}) }}
                                <div class="profile-edit-container">
                                    <div class="profile-edit-header fl-wrap">
                                        <h4>Mon compte</h4>
                                    </div>

                                    <div class="custom-form">
                                        {{ form_row(userForm.firstName, {'label':'Prénom'}) }}
                                        {{ form_row(userForm.lastName, {'label':'Nom'}) }}
                                        <div class="col-md-12">
                                            <div class="col-md-4">
                                                {{ form_row(userForm.age, {'attr':{'class':'input-age floatleft fontsize14 marginbottom20'}}) }}
                                            </div>
                                            <div class="col-md-4">
                                                {{ form_row(userForm.gender, {'label':'genre', 'attr':{'class':'floatleft fontsize14 marginbottom20'}}) }}
                                            </div>

                                            <div class="col-md-4">
                                                {{ form_row(userForm.locality, {'label':'localité', 'attr':{'class':'select-locality floatleft fontsize14 marginbottom20'}}) }}
                                            </div>
                                        </div>

                                        {{ form_row(userForm.phone, {'label':'téléphone'}) }}


                                        <section class="check-user floatleft formbackground">
                                            <div class="col-md-6">
                                                {{ form_row(userForm.instruments) }}
                                            </div>
                                            <div class="col-md-6">
                                                {{ form_row(userForm.styles) }}
                                            </div>
                                        </section>


                                        {{ form_row(userForm.description) }}
                                        <button class="btn  big-btn  color-bg flat-btn">Enregistrer<i
                                                    class="fa fa-angle-right"></i></button>
                                    </div>
                                </div>


                                <!-- profile-edit-container end-->
                                {{ form_widget(userForm._token) }}
                                {{ form_end(userForm, {'render_rest':false}) }}

                            </div>
                            <div class="col-md-2">
                                <div class="edit-profile-photo fl-wrap">
                                    {% if app.user.avatar %}
                                        <img src="{{ app.user.avatar.url }}" class="respimg" alt="avatar">
                                    {% else %}
                                        <img src="/images/avatar/1.jpg" class="respimg" alt="avatar">

                                    {% endif %}
                                    <div class="change-photo-btn">
                                        <div class="photoUpload">
                                            <a href="{{ path('image', {'type':'avatar', 'id':app.user.id}) }}" class="colorwhite"><i
                                                        class="fa fa-upload"></i> Charger Photo</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        {% endblock %}
